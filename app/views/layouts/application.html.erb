<!DOCTYPE html>
<html>
<head>
  <title>GoalsApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>



<% if current_user %>
  Hey there <%= current_user.username %>
  <%= button_to('Sign Out', session_url, method: :delete) %>
<% else %>
  <%= button_to('Sign In', new_session_url, method: :get) %>
  <%= button_to('Sign Up', new_user_url, method: :get) %>
<% end %>

<% flash.each do |type, msgs| %>
  <% msgs.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>

<%= yield %>

</body>
</html>
