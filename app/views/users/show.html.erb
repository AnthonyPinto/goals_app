<h1>Goals page for <%= @user.username %></h1>

<ul>
  <% @user.goals.each do |goal| %>
    <li> <%= link_to goal.title, goal_url(goal) %> </li>
  <% end%>
</ul>

<%= link_to "Create a new goal", new_goal_url %>


<%= render "comments/form" %>

<ul>
  <% @user.comments.each do |comment| %>
    <li> <%= comment.body %> </li>
  <% end%>
</ul>