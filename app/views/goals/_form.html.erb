<% if @goal.persisted? %>
  <form action='<%= goal_url(@goal) %>' method='post'>
    <input
      type='hidden'
      name='_method'
      value='patch'>
<% else %>
  <form action='<%= goals_url %>' method='post'>
<% end %>
  <%= auth_token %>
  
  <label for='goal_title'>Title: </label>
  <input
    type='text'
    id='goal_title'
    name='goal[title]'
    value='<%= @goal.title %>'>
  
  <label for='goal_description'>Description: </label>
  <input
    type='text'
    id='goal_description'
    name='goal[description]'
    value='<%= @goal.description %>'>
    
  <label for='goal_privacy'>Privacy: </label>
  <input
    type='radio'
    id='goal_privacy'
    name='goal[privacy]'
    value="Private"
    <%= 'checked' if @goal.privacy == 'Private' %>
    >Private</input>
  <input
    type='radio'
    id='goal_privacy'
    name='goal[privacy]'
    value="Public"
    <%= 'checked' if @goal.privacy == 'Public' %>
    >Public</input>
  
  <label for='goal_completion'>Completion: </label>
  <select>
    <option value="new">New</option>
    <option value="in_progress">In Progress</option>
    <option value="complete">Complete</option>
  </select>
    
  <input type='submit' value='Submit!'>
  
</form>